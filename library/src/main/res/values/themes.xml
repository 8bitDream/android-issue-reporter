        <item name="md_dark_theme">false</item>
        <item name="md_background_color">#FFFFFF</item>
    </style>

    <style name="Theme.IssueReporter.Light.DarkActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
